<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Broadcast</title>
</head>
<body>
  <h2>Broadcast</h2>
  <a href="/">Back</a>
  <form method="post" action="/broadcast">
    <div><label>Targets (comma separated)</label><input name="targets"/></div>
    <div><label>Text</label><textarea name="text"></textarea></div>
    <button type="submit">Send</button>
  </form>
  <% if (result) { %>
    <h3>Results</h3>
    <ul>
    <% result.forEach(function(r){ %>
      <li><%= r.target %> - <%= r.ok ? 'OK' : 'FAIL: '+r.error %></li>
    <% }) %>
    </ul>
  <% } %>
</body>
</html>
